
<%-layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
          <div class="col-6 offset-3">
            <br><br>
         <h3>Edit new Post</h3>
        <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" id="" placeholder="Enter Title" class="form-control" required value=<%=listing.title%> >
                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Add a Catchy Title</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="" cols="30" rows="10" placeholder="Enter Description"
                    class="form-control" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Please Enter a Short Description</div>
            </div>

            <div class="mb-3">
             Image <br>
            <a href="<%= originalImageUrl%>""><img src="<%= originalImageUrl%>"/></a> 
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]" id="image" class="form-control">
                <div class="invalid-feedback">Please Enter a Valid Link For image</div>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" id="" placeholder="Enter price" class="form-control"  value="<%=listing.price%>" required>
                <div class="invalid-feedback">Price Should Be Valid</div>

            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
      <label for=" location" class="form-label">Location</label>
                <input type="text" name="listing[location]" id="" placeholder="Enter location" class="form-control" required value=<%=listing.location%>>

                <div class="invalid-feedback">Location Should Be Valid</div>

            </div>
            <div class="col-md-8 mb-3">
      <label for=" country" class="form-label">Country </label>
                <input type="text" name="listing[country]" id="" placeholder="Enter country" class="form-control" required value=<%=listing.country%>>
                <div class="invalid-feedback">Country Should Be Valid</div>

            </div>
            </div>
            <button class="btn btn-dark mt-3">EDIT</button>
        </form>
        <br><br>
    </div> 
    </div>

    </body>